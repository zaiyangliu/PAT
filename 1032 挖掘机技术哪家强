#include<cstdio>
using namespace std;
int main(){
  int N;
  int max = 0;
  int num[100001] = {0};
  scanf("%d", &N);
  while(N--){
    int a, b;
    scanf("%d %d", &a, &b);
    num[a] += b;
  }
  int k;
  for(int i = 0; i < 100000; ++i){
    if(num[i] > max){
      max = num[i];
      k = i;
    }
  }
  printf("%d %d", k, max);
  return 0;
}
